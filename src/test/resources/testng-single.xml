<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Single Test Suite"
       verbose="2"
       parallel="none"
       junit="false">

    <listeners>
        <!-- Allure listener -->
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
        <!-- Кастомный listener -->
        <listener class-name="core.base.TestListener"/>
    </listeners>

    <test name="Run Single Test" preserve-order="true">
        <classes>
            <class name="tests.credit.smoke.LoginTest"/>
        </classes>
    </test>

</suite>
